<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/constraintItemMarket"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="24dp"

        android:id="@+id/cardViewImage"
        android:layout_marginStart="16dp"
        android:layout_width="48dp"
        android:layout_height="48dp">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        app:layout_constraintLeft_toRightOf="@id/cardViewImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/textViewGroupName"
        android:textColor="@color/vk_black"
        android:textSize="16sp"
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/textViewGroupName"
        app:layout_constraintRight_toRightOf="@id/textViewGroupName"
        app:layout_constraintLeft_toLeftOf="@id/textViewGroupName"

        android:layout_marginTop="1dp"
        android:id="@+id/textViewGroupType"
        android:textSize="13sp"
        android:textColor="@color/colorGray"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>