<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/constraintItemCity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/viewSelected"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/textViewCityName"
        android:textSize="16sp"
        android:textColor="@color/vk_black"
        android:layout_width="0dp"
        android:layout_height="20dp" />

    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:visibility="gone"
        android:id="@+id/viewSelected"
        android:layout_marginEnd="18dp"
        android:backgroundTint="@color/vk_color"
        android:background="@mipmap/ic_check_circle_on_24"
        android:layout_width="24dp"
        android:layout_height="24dp"/>

</android.support.constraint.ConstraintLayout>