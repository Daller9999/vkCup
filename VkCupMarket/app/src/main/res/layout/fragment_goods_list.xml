<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:id="@+id/buttonBack"
        android:layout_margin="14dp"
        android:background="@mipmap/ic_back_outline_28"
        android:backgroundTint="@color/vk_color"
        android:layout_width="28dp"
        android:layout_height="28dp" />
    
    <TextView
        app:layout_constraintTop_toTopOf="@id/buttonBack"
        app:layout_constraintLeft_toRightOf="@id/buttonBack"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/buttonBack"

        android:id="@+id/textViewMarketName"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="22dp"
        android:textSize="20sp"
        android:textColor="@color/vk_black"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="24dp" />
    <View
        app:layout_constraintTop_toBottomOf="@id/buttonBack"

        android:layout_marginTop="16dp"
        android:background="@color/vk_grey_color"
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

    <android.support.v7.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        app:layout_constraintBottom_toBottomOf="parent"

        android:id="@+id/recyclerViewGoods"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    
    
</android.support.constraint.ConstraintLayout>