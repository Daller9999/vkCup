<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v7.widget.CardView
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="5dp"

        android:id="@+id/cardView"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="44dp"
        android:layout_width="match_parent"
        android:layout_height="54dp">
        <com.sunplacestudio.vkcupvideoqr.Fragment.CustomLinearLayout
            android:id="@+id/linearLayoutBitmaps"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <com.sunplacestudio.vkcupvideoqr.Fragment.EditViewVideo
        app:layout_constraintBottom_toBottomOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"

        android:id="@+id/frameView"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:elevation="3dp"
        android:background="@drawable/video_edit_background"
        android:layout_width="0dp"
        android:layout_height="56dp"/>
    <com.sunplacestudio.vkcupvideoqr.Fragment.CustomImageView
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/frameView"

        android:layout_marginStart="13dp"
        android:elevation="4dp"
        android:id="@+id/imageButtonLeft"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:src="@mipmap/ic_trim_arrow_left"
        android:background="@drawable/button_background_left"
        android:layout_width="20dp"
        android:layout_height="58dp" />

</android.support.constraint.ConstraintLayout>