<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="16dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintRight_toLeftOf="@id/cardViewImage2"
        app:layout_constraintHorizontal_weight="1"

        android:layout_marginEnd="12dp"
        android:id="@+id/cardViewImage1"
        android:layout_marginStart="16dp"
        android:layout_width="158dp"
        android:layout_height="158dp">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>
    
    <TextView
        app:layout_constraintLeft_toLeftOf="@id/cardViewImage1"
        app:layout_constraintRight_toRightOf="@id/cardViewImage1"
        app:layout_constraintTop_toBottomOf="@id/cardViewImage1"

        android:id="@+id/textViewGoodsName1"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorGrayText"
        android:textSize="13sp"
        android:layout_width="0dp"
        android:layout_height="16dp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/cardViewImage1"
        app:layout_constraintRight_toRightOf="@id/cardViewImage1"
        app:layout_constraintTop_toBottomOf="@id/textViewGoodsName1"

        android:textStyle="bold"
        android:id="@+id/textViewGoodsCost1"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/vk_black"
        android:textSize="14sp"
        android:layout_width="0dp"
        android:layout_height="18dp" />



    <android.support.v7.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/cardViewImage1"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp"

        app:layout_constraintHorizontal_weight="1"
        android:id="@+id/cardViewImage2"
        android:layout_marginEnd="16dp"
        android:layout_width="158dp"
        android:layout_height="158dp">
        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/cardViewImage2"
        app:layout_constraintRight_toRightOf="@id/cardViewImage2"
        app:layout_constraintTop_toBottomOf="@id/cardViewImage2"

        android:id="@+id/textViewGoodsName2"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorGrayText"
        android:textSize="13sp"
        android:layout_width="0dp"
        android:layout_height="16dp" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/cardViewImage2"
        app:layout_constraintRight_toRightOf="@id/cardViewImage2"
        app:layout_constraintTop_toBottomOf="@id/textViewGoodsName2"

        android:textStyle="bold"
        android:id="@+id/textViewGoodsCost2"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/vk_black"
        android:textSize="14sp"
        android:layout_width="0dp"
        android:layout_height="18dp" />




</android.support.constraint.ConstraintLayout>