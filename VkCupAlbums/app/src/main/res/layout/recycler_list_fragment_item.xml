<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/view2"

        android:layout_marginStart="16dp"
        android:layout_marginEnd="6dp"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:id="@+id/view1">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/viewDelete1"
            android:visibility="gone"
            android:background="@color/colorGrayAlpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <Button
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintRight_toRightOf="@id/view1"

        android:visibility="gone"
        android:id="@+id/check1"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:elevation="2dp"
        android:background="@mipmap/ic_remove_24"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        app:layout_constraintRight_toRightOf="@id/view1"

        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/vk_black"
        android:id="@+id/text1a"
        android:layout_width="0dp"
        android:maxHeight="36dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/text1a"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        app:layout_constraintRight_toRightOf="@id/view1"

        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/colorTextGray"
        android:id="@+id/text1b"
        android:layout_width="0dp"
        android:layout_height="16dp" />


    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="158dp"
        android:layout_height="158dp"

        android:layout_marginEnd="16dp"
        android:layout_marginStart="6dp"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/view1"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <View
            android:id="@+id/viewDelete2"
            android:visibility="gone"
            android:background="@color/colorGrayAlpha"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v7.widget.CardView>
    <Button
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"

        android:visibility="gone"
        android:id="@+id/check2"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:elevation="2dp"
        android:background="@mipmap/ic_remove_24"
        android:layout_width="24dp"
        android:layout_height="24dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"

        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/vk_black"
        android:id="@+id/text2a"
        android:layout_width="0dp"
        android:maxHeight="36dp"
        android:layout_height="wrap_content" />
    <TextView
        app:layout_constraintTop_toBottomOf="@id/text2a"
        app:layout_constraintLeft_toLeftOf="@id/view2"
        app:layout_constraintRight_toRightOf="@id/view2"

        android:layout_marginTop="8dp"
        android:gravity="center"
        android:textSize="13sp"
        android:textColor="@color/colorTextGray"
        android:id="@+id/text2b"
        android:layout_width="0dp"
        android:layout_height="16dp" />

</android.support.constraint.ConstraintLayout>